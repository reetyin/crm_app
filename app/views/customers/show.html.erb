<%# encoding: utf-8 %>
<div class="container">
  <div class="level">
    <div class="level-left">
      <div class="level-item">
        <h1 class="title">Customer Details</h1>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <div class="buttons">
          <%= link_to "Edit", edit_customer_path(@customer), class: "button is-primary" %>
          <%= link_to "Back to List", customers_path, class: "button is-light" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-128x128">
            <div class="has-background-grey-lighter is-rounded" style="width: 128px; height: 128px; display: flex; align-items: center; justify-content: center;">
              <span class="icon is-large">
                <i class="fas fa-user fa-3x"></i>
              </span>
            </div>
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-2"><%= @customer.full_name %></p>
          <div class="content">
            <p class="subtitle is-4">
              <strong>Phone:</strong> <%= @customer.phone_number %><br>
              <% if @customer.email_address.present? %>
                <strong>Email:</strong> <%= @customer.email_address %><br>
              <% else %>
                <strong>Email:</strong> <em>not provided</em><br>
              <% end %>
              <% if @customer.notes.present? %>
                <strong>Notes:</strong> <%= @customer.notes %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="buttons" style="margin-top: 20px;">
    <%= link_to "All Customers", customers_path, class: "button is-light" %>
    <%= link_to "Alphabetized View", customers_alphabetized_path, class: "button is-primary" %>
    <%= link_to "Missing Email View", customers_missing_email_path, class: "button is-warning" %>
  </div>
</div>
